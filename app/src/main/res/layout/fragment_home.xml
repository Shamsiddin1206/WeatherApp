<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="#12141A">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="8 October 2023"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/exactDate"
        android:textColor="#4F5052"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exactDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Tashkent, Uzbekistan"
        android:textSize="15sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginTop="3dp"
        android:id="@+id/exactLocation"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28°"
        android:textSize="70sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/exactLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        android:textStyle="bold"
        android:id="@+id/currentGradus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/currentGradus"
        app:layout_constraintStart_toStartOf="@id/currentGradus"
        android:text="Cloudy"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="-15dp"
        android:id="@+id/gradusDescription"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/infoCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/gradusDescription"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#1D2028"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/wind_ic"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/windTezligi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14.95 km"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/temperature_ic"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/temperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29.6 °"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/weather_humidity_ic"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/namlik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59 %"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/currentImage"
        android:layout_marginTop="5dp"
        android:layout_width="160dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/exactLocation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        android:src="@drawable/cloudynight"
        android:scaleType="fitCenter"
        android:elevation="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        app:layout_constraintTop_toBottomOf="@id/infoCard"
        app:layout_constraintStart_toStartOf="@id/currentGradus"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:id="@+id/TodayData"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerfortime"
        app:layout_constraintTop_toBottomOf="@id/TodayData"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next 5 days"
        app:layout_constraintTop_toBottomOf="@id/recyclerfortime"
        app:layout_constraintStart_toStartOf="@id/currentGradus"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:id="@+id/ForecatsDays"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ForecatsDays"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/nextDaysRecycler"/>
</androidx.constraintlayout.widget.ConstraintLayout>